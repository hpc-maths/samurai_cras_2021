set -ex

git clone https://github.com/hpc-maths/samurai.git
git checkout -b cras_note 3062795

echo $CONDA_PREFIX

mkdir samurai/build
pushd samurai
pushd build
cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=$CONDA_PREFIX
make install
popd
popd

rm -r samurai

mkdir build
pushd build

cmake .. -DCMAKE_BUILD_TYPE=Release
make

popd
